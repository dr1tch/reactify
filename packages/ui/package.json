{
  "name": "react-super-ui-preview",
  "private": false,
  "version": "0.0.31-master-f33bacb",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dr1tch/reactify/tree/master/packages/ui"
  },
  "publishType": "patch",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "story:dev": "storybook dev -p 6006",
    "story:build": "storybook build",
    "build:lib": "tsc && vite build",
    "build:style": "postcss src/style/index.css --verbose -o dist/styles.css",
    "lint": "eslint --ext .js,.jsx,.ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "prettier": "prettier --write \"src/**/*.{ts,tsx,js,mdx}\"",
    "test": "vitest",
    "build": "yarn build:lib && yarn build:style",
    "test:cov": "vitest run --coverage",
    "release": "yarn build && yarn publish --non-interactive --access public",
    "release-it:dev:verbose": "release-it --no-increment --no-git.tag --ci --verbose",
    "release-it:dev": "release-it --no-increment --no-git.tag --ci",
    "release-it:verbose": "release-it --ci --verbose",
    "release-it": "release-it --ci"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-storysource": "^7.5.3",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-vite": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/react": "^14.1.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.6.15",
    "jsdom": "^22.1.0",
    "json": "^11.0.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "prop-types": "^15.8.1",
    "radix-themes-tw": "^0.0.8",
    "storybook": "^7.5.3",
    "storybook-dark-mode": "^3.0.1",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "files": [
    "dist"
  ]
}