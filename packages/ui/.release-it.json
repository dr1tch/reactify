{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "web": true
    },
    "hooks": {
        "before:init": ["yarn install --frozen-lockfile", "yarn build"]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "infile": "CHANGELOG.md",
            "header": "# Changelog",
            "ignoreRecommendedBump": true
        }
    }
}