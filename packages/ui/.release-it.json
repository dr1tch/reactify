{
    "git": {
        "commit": true,
        "commitMessage": "chore: release v${version}",
        "tag": true,
        "tagName": "v${version}",
        "push": true
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true,
        "releaseName": "v${version}",
        "web": true
    },
    "hooks": {
        "before:init": [
            "yarn build && node ../../deploy/update-version.js && git status && git add package.json && git commit -m 'chore: build'"
        ],
        "before:github:release": "yarn publish --access public",
        "after:release": [
            "node ../../deploy/update-root-pkg.js && yarn install && yarn build && git add package.json yarn.lock && git commit -m 'chore: update root package.json' && git push"
        ]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits"
            },
            "infile": "CHANGELOG.md",
            "header": "# Changelog",
            "ignoreRecommendedBump": true
        }
    }
}